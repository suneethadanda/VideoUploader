<Window x:Class="WpfVideoUploader.VideoInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideoInfo" Height="426" Width="482"
        WindowStyle="None" WindowState="Normal"  AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Window.Background="Transparent" WindowStartupLocation="CenterScreen">
        
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/WpfVideoUploader;component/Images/video_info_bg.png" />
        </Grid.Background>
        <Grid.Resources>
            <ResourceDictionary Source="Styles\ExpressionLight.xaml"/>
        </Grid.Resources>
        <TextBox Height="25" HorizontalAlignment="Right" Margin="0,102,91,0" Name="txtTitle" VerticalAlignment="Top" Width="221" Background="#FF656F77" Foreground="White" />
            <TextBox Height="78" HorizontalAlignment="Left" Margin="170,154,0,0" Name="txtDescription" VerticalAlignment="Top" Width="221" Background="#FF656F77" Foreground="White" />
                <TextBox Height="29" HorizontalAlignment="Left" Margin="46,264,0,0" Name="txtFileName" VerticalAlignment="Top" Width="258" Background="#FF656F77" Foreground="White" />
            <Button Content="Select Video" Height="29" HorizontalAlignment="Left" Margin="306,264,0,0" Name="btnAddVideo" VerticalAlignment="Top" Width="89" Click="btnAddVideo_Click" Foreground="#FFA7FF00" Background="#FF2A2E33" />
            <Button Content="Next" Height="25" Visibility="Hidden" HorizontalAlignment="Left" Margin="286,311,0,0" Name="btnNext" VerticalAlignment="Top" Width="105" Click="btnNext_Click" Background="#FF2A2E33" Foreground="#FFA1A7AC" FontWeight="Bold" FontSize="12" />
            <CheckBox Content="Default Video" Height="16" HorizontalAlignment="Left" Margin="173,240,0,0" Name="chkDefaultVideo" VerticalAlignment="Top" Foreground="#FFF0F0F0" />
            <Label Content="Video Title:" FontSize="14" FontWeight="Bold" Foreground="#FFA1A7AC" Height="28" HorizontalAlignment="Left" Margin="46,103,0,0" Name="lblVideoTitle" VerticalAlignment="Top" Width="83" />
            <Label Content="Description:" FontSize="14" FontWeight="Bold" Foreground="#FFA1A7AC" Height="28" HorizontalAlignment="Left" Margin="46,154,0,0" Name="lblDescription" VerticalAlignment="Top" Width="83" />
            <Label Content="Error:" FontSize="14" FontWeight="Bold" Foreground="#FFFF1D00" Height="22" HorizontalAlignment="Left" Margin="46,335,0,0" Name="lblError" VerticalAlignment="Top" Width="345" Visibility="Hidden" />
            <Label Content="Please enter a video title" FontSize="12" FontWeight="Normal" Foreground="#FFC52120" Height="15" HorizontalAlignment="Left" Margin="172,86,0,0" Name="lblVideoTitleError" VerticalAlignment="Top" Width="228" Visibility="Hidden"/>
            <Label Content="*" Height="24" HorizontalAlignment="Left" Margin="391,102,0,0" Name="label1" VerticalAlignment="Top" IsEnabled="False" Foreground="#FFEE0E0E" Width="14" Visibility="Hidden"/>
            <Button Content="Button" Height="23" HorizontalAlignment="Right" Margin="0,9,14,0" Name="btnClose" VerticalAlignment="Top" Width="22" Style="{StaticResource CloseRadialButton}" Click="btnClose_Click" />
            <Button Content="Button" Height="23" HorizontalAlignment="Right" Margin="0,9,35,0" Name="button2" VerticalAlignment="Top" Width="30" Style="{StaticResource MinimizeRadialButton}" Click="button2_Click" />
       
    </Grid>
</Window>
