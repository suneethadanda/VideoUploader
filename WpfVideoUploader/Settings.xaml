<Window x:Class="WpfVideoUploader.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="413" Width="504"  Window.Background="Transparent"
            WindowStyle="None" WindowState="Normal"  AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown" WindowStartupLocation="CenterScreen">
    <Grid><!--Window.Background="Transparent" WindowStyle="None" WindowState="Normal"  AllowsTransparency="True"-->
        <Grid.Background>
            <ImageBrush ImageSource="/WpfVideoUploader;component/Images/settings_bg.png" />
        </Grid.Background>
        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="Styles\ExpressionLight.xaml"/>
            </Grid.Resources>
                <Button Content="Button" Height="23" HorizontalAlignment="Right" Margin="0,15,10,0" Name="btnClose" VerticalAlignment="Top" Width="25" Style="{StaticResource CloseRadialButton}" Click="btnClose_Click" />
            <Button Content="Button" Height="23" HorizontalAlignment="Right" Margin="0,15,37,0" Name="btnMinimize" VerticalAlignment="Top" Width="23" Style="{StaticResource MinimizeRadialButton}" Click="btnMinimize_Click" />
            <Button Content="..." Height="23" HorizontalAlignment="Left" Margin="348,143,0,0" Name="btnVideoBrowse" VerticalAlignment="Top" Width="75" Foreground="#FF28FF0C" Background="#FF2A2E33" Click="btnVideoBrowse_Click" />
        <Button Content="..." Height="23" HorizontalAlignment="Left" Margin="348,200,0,0" Name="btnOutFileLocation" VerticalAlignment="Top" Width="75" Foreground="#FFA7FF00" Background="#FF2A2E33" Click="btnOutFileLocation_Click" />
        <Label Content="Default Video Location" Height="28" HorizontalAlignment="Left" Margin="105,108,0,0" Name="label1" VerticalAlignment="Top" Width="140" Foreground="#FFA1A7AC" FontSize="13" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="104,142,0,0" Name="txtVideoLocation" VerticalAlignment="Top" Width="243" Background="#FF656F77" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="104,200,0,0" Name="txtOutFileLocation" VerticalAlignment="Top" Width="243" Background="#FF656F77" />
            <Label Content="Output File Location" Height="28" HorizontalAlignment="Left" Margin="104,176,0,0" Name="label2" VerticalAlignment="Top" Width="139" Foreground="#FFA1A7AC" FontSize="13" />
            <CheckBox Content="Do You Want To Store The  Encoded Video" Height="21" HorizontalAlignment="Left" Margin="104,243,0,0" Name="chkVideoStore" VerticalAlignment="Top" Foreground="#FFA1A7AC" FontSize="13" IsChecked="True" />
        <Button Content="OK" Height="25" HorizontalAlignment="Left" Margin="303,289,0,0" Name="buttonOK" VerticalAlignment="Top" Width="42" Click="buttonOK_Click" Foreground="#FFA7FF00" Background="#FF2A2E33" />
        <Button Content="Cancel" Height="25" HorizontalAlignment="Left" Margin="354,289,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="64" Foreground="#FFA7FF00" Background="#FF2A2E33" Click="buttonCancel_Click" />
        </Grid>
    </Grid>
</Window>
