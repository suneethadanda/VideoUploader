        <Label Content="Logged in User: " Height="28" HorizontalAlignment="Right" Margin="0,4,106,0" Name="lblLoggedInUser" VerticalAlignment="Top" Foreground="#FFA1A7AC" FontSize="14" FontWeight="Normal" Grid.Column="1" />
        <Label Content="Vehicle Count:" Height="27" HorizontalAlignment="Left" Margin="11,128,0,0" Name="lblNoOfRecords" VerticalAlignment="Top" Foreground="#FFA1A7AC" FontSize="14" FontWeight="Normal" Width="99" />


        <StackPanel Orientation="Horizontal"  Margin="333,6,198,720" MouseDown="btnSettings_Click">

            <Button Content="View Log"  FontFamily="Shruti" FontStretch="Normal" Foreground="#FFB7C565" x:Name="btnSettings" Style="{StaticResource AddVideoButton}" Click="btnSettings_Click" Width="68"    />
        </StackPanel>

        <StackPanel Orientation="Horizontal"  Margin="422,6,139,720" MouseDown="btnQueue_Click">
            <Button Content="Queue"  FontFamily="Shruti" FontStretch="Normal" Foreground="#FFB7C565" Height="30" x:Name="btnQueue" Style="{StaticResource AddVideoButton}" Click="btnQueue_Click" Margin="0,-2,0,-8" Width="59"    />
        </StackPanel>

        <StackPanel Orientation="Horizontal"  Margin="487,4,17,712" MouseDown="btnImageQueue_Click">
            <Button Content="Image Queue"  FontFamily="Shruti" FontStretch="Normal" Foreground="#FFB7C565" Height="30" x:Name="btnImageQueue" Style="{StaticResource AddVideoButton}" Click="btnImageQueue_Click" Width="105"    />
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Margin="603,3,228,710" MouseDown="btnAddVideo_Click" Grid.ColumnSpan="2">
            <Image Source="/Images/video_green.png" Width="25" Height="20" >

