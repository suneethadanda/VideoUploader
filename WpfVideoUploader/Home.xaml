            <Button Content="Add Video"  FontFamily="Shruti" FontStretch="Normal" Foreground="#FFB7C565" Height="30" Name="btnAddVideo" Style="{StaticResource AddVideoButton}" Click="btnAddVideo_Click"    />

        </StackPanel>
        <StackPanel Orientation="Horizontal"  Margin="231,4,274,722" MouseDown="btnImageQueue_Click">
            <Button Content="App Settings" Height="30" HorizontalAlignment="Right"  x:Name="btnAppsettings" VerticalAlignment="Top" Width="97" Style="{StaticResource AddVideoButton}" Click="btnAppsettings_Click"  />
        </StackPanel>
        <Button Content="Batch Upload" Visibility="Visible" FontFamily="Shruti" FontStretch="Normal" Foreground="White" Height="30" HorizontalAlignment="Left" Click="btnBatchUpload_Click" Margin="161,38,0,0" Name="btnBatchUpload" Style="{StaticResource QueueButton}" VerticalAlignment="Top" Width="187"  />
    </Grid>
</Window>
