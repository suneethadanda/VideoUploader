    <!--Style for listview in tile format-->
    <Style x:Key="TileListViewStyle" TargetType="{x:Type ListView}">
        <Setter Property="Template">
            <Setter.Value>
                <!--Define control template for listview-->
                <ControlTemplate TargetType="{x:Type ListView}">
                    <DockPanel Margin="{TemplateBinding Padding}">
                        <ScrollViewer  Focusable="false" DockPanel.Dock="Top" Grid.Column="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <WrapPanel Grid.Column="0" IsItemsHost="True" x:Name="ItemsHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <SolidColorBrush x:Key="ListBorder" Color="#828790" />
    <Style x:Key="{x:Static GridView.GridViewScrollViewerStyleKey}" TargetType="{x:Type ScrollViewer}">
        <Setter Property="Focusable" Value="false" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Grid SnapsToDevicePixels="true" Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <DockPanel Margin="{TemplateBinding Padding}">
                            <WrapPanel Grid.Column="0" IsItemsHost="True" x:Name="ItemsHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </DockPanel>
                        <ScrollBar Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Cursor="Arrow" x:Name="PART_HorizontalScrollBar" Grid.Row="1" Orientation="Horizontal" ViewportSize="{TemplateBinding ViewportWidth}" Maximum="{TemplateBinding ScrollableWidth}" Minimum="0.0" Value="{Binding Path=HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" />
                        <ScrollBar Visibility="Visible" Cursor="Arrow" x:Name="PART_VerticalScrollBar" Grid.Column="1" Orientation="Vertical" ViewportSize="{TemplateBinding ViewportHeight}" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0.0" Value="{Binding Path=VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                        <DockPanel Grid.Column="1" Grid.Row="1" Background="{Binding Path=Background, ElementName=PART_VerticalScrollBar}" LastChildFill="false">
                            <Rectangle Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Width="0.5" Fill="Red"  DockPanel.Dock="Left" />
                            <Rectangle Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Height="0.5" Fill="Red" DockPanel.Dock="Top" />
                        </DockPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Data template for Vehicle data-->
    <DataTemplate x:Key="HTileTemplate" DataType="{x:Type l:Vehicle}">
        <Grid Width="174">
            <!--Two rows one is for image and another is for Textdata-->
            <Grid.RowDefinitions>
                <RowDefinition Height="125"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--Image for datastore image-->
            <Rectangle x:Name="rectangle" Grid.RowSpan="3" Width="174" StrokeThickness="1" RadiusX="1" RadiusY="1"   Fill="LightGray" Margin="0,1,0,1" />
            <Rectangle Grid.Row="0" Height="110" Width="159" Fill="White" StrokeThickness="1"/>
            <Image Grid.Row="0"  Height="105" Width="154" Stretch="Fill"  Source="{Binding Image}"/>
            <!--Outer stackpane is to Place Texts in sequential format-->
            <StackPanel Grid.Row="1" Margin="2,0" Orientation="Vertical" HorizontalAlignment="Center">
                <!--Display person properties in stackpanel-->
                <StackPanel Orientation="Horizontal"  TextBlock.FontWeight="Bold">
                    <TextBlock Text="{Binding Year}" Margin="45,0,5,0"/>
                    <TextBlock Text="{Binding Make}" Margin="2,0,5,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" TextBlock.FontWeight="Normal">
                    <TextBlock Text="{Binding Model}" Margin="45,0,5,0"/>
                    <TextBlock Text="{Binding Trim}" Margin="2,0,5,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Name="lnkText" Text="{Binding Videos}" Foreground="Blue" MouseLeftButtonUp="Hyperlink_RequestNavigate" MouseEnter="lnkText_MouseEnter" MouseLeave="lnkText_MouseLeave" Margin="45,0,5,0"/>
                    <Image Source="{Binding VideoImage}" VerticalAlignment="Center" HorizontalAlignment="Right" Height="20" Width="20" Margin="25,1"/>
                </StackPanel>

            </StackPanel>
        </Grid>
        <DataTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="rectangle" Property="Fill" Value="#828790"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="lnkText" Property="Foreground" Value="Red"/>
            </Trigger>
        </DataTemplate.Triggers>
    </DataTemplate>







