    <Style x:Key="AddVideoButton" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Name="RootElement" BorderThickness="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="0" Color="#33393E" />
                                <GradientStop Offset="1" Color="#33393E" />
                            </LinearGradientBrush>
                        </Border.Background>



                        <TextBlock Name="ButtonText" Text="{TemplateBinding Content}" Height="25"  FontFamily="Shruti" FontSize="16" >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="#FFA1A7AC"/>
                            </TextBlock.Foreground>
                        </TextBlock>


                    </Border>


                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <!--<Setter TargetName="Shape_Queue" Property="Fill" Value="#FFB7C565"/>-->
                            <Setter TargetName="ButtonText" Property="Foreground" Value="#FFB7C565"/>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


